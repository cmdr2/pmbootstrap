pkgname=kauth
pkgver=5.36.0
pkgrel=1
pkgdesc='Abstraction to system policy and authentication features'
arch="all"
url='https://community.kde.org/Frameworks'
license="LGPL"
depends="polkit-qt5"
depends_dev="kcoreaddons"
makedepends="$depends_dev extra-cmake-modules qt5-qttools-dev clang py3-qt5 doxygen polkit-qt5"
source="https://download.kde.org/stable/frameworks/${pkgver%.*}/${pkgname}-${pkgver}.tar.xz"

prepare() {
	mkdir -p build
}

build() {
	cd build
	cmake ../${pkgname}-${pkgver} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_LIBDIR=lib \
		-DKDE_INSTALL_LIBEXECDIR=lib \
		-DBUILD_TESTING=OFF \
		-DBUILD_QCH=ON
	make
}

package() {
	cd "$srcdir/build"
	make DESTDIR="${pkgdir}" install
}
sha512sums="5113c0943cdaa8f9fce60a62fbfabcf666eafc251bee4faf141aac23362e6c317ce8b3c0edad86380309bccf8cbe3f211db6c252bd3681aaf019280a51d9ea2a  kauth-5.36.0.tar.xz"
